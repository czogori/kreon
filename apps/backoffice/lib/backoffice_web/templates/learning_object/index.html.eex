<%= link "Nowy kurs", to: Routes.learning_object_path(@conn, :new, %{course: nil}), class: "button" %>
<%= link "Nowe wideo", to: Routes.learning_object_path(@conn, :new), class: "button" %>
<table>
<tr>
  <th>Typ</th>
  <th>Nazwa</th>
  <th>Ost. modyfikacja</th>
  <th>Akcje</th>
</tr>

<%= for item <- @items do %>
<tr>
  <td><%= raw type(item.type) %></th>
  <td><%= item.name %></td>
  <td><%= item.updated_at %></td>
  <td>
    <span><%= link "Pokaż", to: Routes.learning_object_path(@conn, :show, item.id), class: "button" %></span>
    <span><%= link "Usuń", to: Routes.learning_object_path(@conn, :delete, item), method: :delete, data: [confirm: "Jesteś pewny?"], class: "button" %></span>
  </td>
</tr>
<% end %>
</table>